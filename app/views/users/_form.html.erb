<%= form_with model: @user, html: { multipart: true } do |f| %>
  <% if @user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'text-muted form-control' %>
  </div>

  <div class="field mb-3">
    <%= f.label :email, class: 'form-label' %>
    <%= f.text_field :email, class: 'text-muted form-control' %>
  </div>

  <div class="actions my-4">
    <%= f.submit "Save", class: 'btn btn-outline-primary' %>
    or <%= link_to "Get back", :back %>
  </div>
<% end %>
