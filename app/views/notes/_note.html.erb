<table class="table table-bordered">
  <thead>
    <tr>
      <th style="width: 100px;">Line number (#)</th>
      <th>Note text</th>
      <th style="width: 150px;">Author name</th>
      <th style="width: 100px;">Create date</th>
      <th style="width: 50px;">Delete button</th>
    </tr>
  </thead>
  <tbody>
    <% @notes.each do |note| %>
      <tr id="note-<%= note.id %>">
        <td style="width: 100px;"><%= note.id %></td>
        <td><%= note.body %></td>
        <td style="width: 150px;" data-toggle="tooltip" title="<%= note.user.name %>"><%= note.user.name.split(' ').first %></td>
        <td style="width: 100px;" data-toggle="tooltip" title="<%= note.created_at.to_formatted_s(:long) %>">
          <%= note.created_at.to_date %></td>
        <td style="width: 50px;">
          <% if user_signed_in? %>
            <%= button_to note_path(note.id),
              class: 'delete-note', 
              method: :delete,
              form: { data: { turbo_confirm: "Are you sure?" } },
              data: { toggle: 'tooltip', placement: 'top' }, 
              title: 'Delete', 'data-note-id': note.id do %>
              <i class="bi bi-trash"></i>
            <% end %>
          <% else %>
            
          <% end %>
        </td>
      </tr>
    <% end %>
    
    <% if user_signed_in? %>
      <tr>
        <td><%= @notes.last.id + 1 %></td>
        <td>
          <%= form_with model: Note.new, id: 'new-note-form', class: 'note-form' do |form| %>
            <%= form.text_field :body, 
              placeholder: 'WRITE A NEW NOTE', 
              class: 'form-control', 
              data: { controller: 'notes', action: 'changeNote' } %>
            <%= form.submit 'Save', class: 'btn btn-primary mt-2' %>
          <% end %>
        </td>
        <td colspan="3"></td>
      </tr>
    <% end %>
  </tbody>
</table>
