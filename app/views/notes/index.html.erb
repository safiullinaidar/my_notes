<p style="color: green"><%= notice %></p>

<h1 class="my-4 text-center"><%= pluralize(Note.count, "Note") %></h1>

<div id="notes">
  <% @notes.each do |note| %>
    <%= render note %>
    <p>
      <%= link_to "Show this note", note %>
    </p>
  <% end %>
</div>

<%= link_to "New note", new_note_path %>
